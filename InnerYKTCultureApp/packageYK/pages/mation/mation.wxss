/* pages/mation/mation.wxss */
page{
  padding: 20rpx;
  background: #f2f2f2;
  box-sizing: border-box;
  border-radius:10rpx; 
}
.facility-s-o{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin: 36rpx 0; 
}
.anniu{
  border: #999 1rpx solid;
  padding: 5rpx 30rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  width: 130rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #747474;
}
.mation{
  background: #fff;
  padding: 20rpx;
}
.onest{
  width:80%;
  display: flex;
  align-items: center;
}
.onest text:nth-of-type(1){
  display: inline-block;
  color: #ccc;
  width: 31%;
  white-space: nowrap;
}
.onest text:nth-of-type(2){
  display: inline-block;
  width: 40%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bord-o{
  display: inline-block;
  width: 27%;
  font-size: 28rpx;
  color: #ccc;
}
.bord{
  color: #333;
  border:#000 solid 1rpx;
}
.mation-o{
  border-bottom:solid #ccc 1rpx; 
}
.mation-t{
  border-bottom:solid #ccc 1rpx; 
}
.mation-t-v{
  line-height: 100rpx;
  height: 100rpx;
}
.mation-t-o{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mation-t-o text{
  color: #ccc;
}
.mation-t-o input{
  border: #ccc solid 1rpx;
  width: 72%;
  border-radius:5rpx; 
  text-align: center;
  padding: 5rpx 0;
  color: #2277E8;
  margin-left: 20rpx;
}
.mation-t-s{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 32rpx 0;
}
.mation-t-s-v{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 70%;
}
.mation-t-s-v input{
  width: 120rpx;
  border: #ccc solid 1rpx;
  padding: 5rpx 20rpx;
  color: #2277E8;
  border-radius:5rpx; 

}
.hoed{
  display: flex;
  margin-top: 20rpx;
}
.hoed view:nth-of-type(1){
  width: 25%;
  white-space: nowrap;
  color: #999;
}
.hoed-text{
  width: 500rpx;
  height: 200rpx;
  border: #ccc solid 1rpx;
}
.btn{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.anniu-t{
  border: #F93D3C 1rpx solid;
  box-sizing: border-box;
  border-radius: 50rpx;
  width: 220rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #F93D3C;
}
.anniu-q{
  border: #999 1rpx solid;
  box-sizing: border-box;
  border-radius: 40rpx;
  width: 120rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #747474;
}
.btn-v{
  width: 40%;
  display: flex;
  justify-content: space-between;
}
.radio{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.radio label{
  font-size:30rpx;
  width: 42%;
  margin-left: 20rpx;
  white-space: nowrap;
}

.radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 18rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 18rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 30rpx;
  text-align: center;
  font-size: 0rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: #03a9f4;
  transform: translate(-50%, -50%) scale(1);
}
.radio .wx-radio-input.wx-radio-input-checked {
  border-color: #03a9f4;
  background: #fff;
  height: 36rpx;
  width: 36rpx;
}
.radio .wx-radio-input {
  height: 36rpx;
  width: 36rpx;
  margin-top: -4rpx;
  border-radius: 50%;
  border: 2rpx solid #999;
  background: transparent;
  
}