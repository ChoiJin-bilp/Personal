/* packageYK/pages/tiedaphone/tiedaphone.wxss */
page{
  padding: 40rpx;
  box-sizing: border-box;
}
.phoneTop{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #E3E4E5;
  color: #333;
  height: 80rpx;
  border-radius:6rpx; 
  font-size: 32rpx;
  margin-bottom: 150rpx;
}
.phoneTop .phoneTop-A{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.phoneTop .phoneTop-B{
border-radius:6rpx; 
background: #008866;
color: #fff;
}
/*输入框*/
.phoneNum{
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom:2rpx solid #ccc;
  font-size: 30rpx;
  justify-content: space-between;
  margin-top: 50rpx;
}

.yanzheng{
  width: 100rpx;
  border-left:2rpx solid #ccc;  
   display: flex;
  justify-content: center;
  align-items: center;
 color: #43A9FC;
}

.phoneNum .bplu{
  width: 300rpx;
  width: 230rpx;
  font-size: 28rpx;
  margin: 0;
}
/*确认按钮*/
.fairm{
  width: 100%;
    display: flex;
  justify-content: center;
  align-items: center;
  background: #008866;
  color: #fff;
    font-size: 32rpx;
  height: 80rpx;
border-radius:4rpx; 
margin-top: 60rpx;
}
/*立即授权*/
.shouQuan{
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shouQuan button{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 350rpx;
  height: 80rpx;
  border:2rpx solid #80C3B2;
  color: #008866;
  font-size: 30rpx;
  border-radius:4rpx; 
}