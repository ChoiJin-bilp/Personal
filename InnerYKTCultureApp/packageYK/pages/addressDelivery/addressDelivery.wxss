/* pages//addressDelivery/addressDelivery.wxss */
.wxkong{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  color: #94979B;
  font-size: 28rpx;
  background: #F2F2F2
}
.bust{
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  font-size: 28rpx;
  border-top: #999 solid 2rpx;
}
.addnum {
  width: 44rpx;
  height: 44rpx;
  /* border: #2F9F82 solid 4rpx; */
  background: #2f9f82;
  border-radius: 50%;
  font-size: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-sizing: border-box;
  position: relative;
  margin-right: 20rpx;
}

.addnum::after {
  content: "";
  width: 50%;
  border: 1rpx #fff solid;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%) rotate(90deg);
}

.addnum::before {
  content: "";
  width: 50%;
  border: 1rpx #fff solid;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%) rotate(0deg);
}
/*收货项循环*/
.addressDeliveryItem{
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: #ccc solid 2rpx;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  font-size: 32rpx;
}
.addressDeliveryItem image{
  width: 40rpx;
  height: 40rpx;
} 
.addressfont{
  font-weight: bold;
  color: #333;
}
.addfont{
  color: #666;
  font-size: 28rpx;
  line-height: 50rpx;
}
.addfont text{
  margin-left: 10rpx;
}
/*选择地点跳转*/
.addtitle{
 background-color: #F0F1F2;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  font-size: 30rpx;
  color: #333;
}
.additem{
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  box-sizing: border-box;
}
.additem view:nth-of-type(1){
  width: 75%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  background: #F2F3F5;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-weight: bold;
  letter-spacing: 4rpx;
}
.additem view:nth-of-type(2){
  display: flex;
  color: #34A085;
  font-size: 24rpx;
  align-items: center;
  height: 62rpx;
}
.additem view:nth-of-type(2) image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}