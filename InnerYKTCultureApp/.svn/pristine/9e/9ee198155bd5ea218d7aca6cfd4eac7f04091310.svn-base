/* pages/conversion/conversion.wxss */
page{
  height:100%;
}
.shopbox{
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  padding-bottom: 20rpx;
  background: #f6f6f6;
}
.store{
  width: 45.5%;
  height:430rpx;
  float: left;
  overflow: hidden;
  background: white;
  margin:20rpx 0 0 3%;
  border-radius:16rpx;
  text-align: center;
  position: relative;
}
.shopimg{
  width: 310rpx;
  height:310rpx;
  position:absolute;
  left: 50%;
  top: 10rpx;
  margin-left: -155rpx;
  z-index: 2;
}
.shopping{
  position:absolute;
  left:0;
  top:330rpx;
  width: 100%;
  height: 140rpx;
}
.shopname{
  width: 94%;
  padding: 0rpx 3%;
  height:40rpx;
  line-height: 40rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
}
.shoppay{
  width: 94%;
  padding: 0 3%;
  height:52rpx;
  line-height: 52rpx;
  text-align: left;
}
.selling,.original{
  display: inline-block;
}
.selling{
  font-size: 26rpx;
  color: #ff1f1f
}
.selling text{
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 0 0 4rpx;
}
.original{
  font-size: 26rpx;
  color: #666;margin-left: 20rpx;
  text-decoration:line-through;
}
