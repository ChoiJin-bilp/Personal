/* pages/refund/refund.wxss */
page{
  background: #f2f2f2;
  color: #999;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.listnum{
  display: flex;
}
.num-title{
  width: 22%;
}
.num-item{
  width: 78%;
  color: #333;
}
.story{
  display: flex;
  margin-top: 30rpx;
}
.ry-o{
  position: relative;
  width: 22%;
}
.ry-o::after{
  content: "*";
  position: absolute;
  top: 0;
  right: 6rpx;
  font-size: 36rpx;
  color: red;
}
.story textarea{
  background: #fff;
  border-radius:10rpx;
  height: 190rpx; 
  border: #ccc solid 2rpx;
  width: 78%;
}
.addimg{
  display: flex;
  flex-wrap: wrap;
  width: 78%;
}
.addimg-img{
  margin-left: 14rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: solid #ccc 1rpx;
  height: 126rpx;
  width: 160rpx;
}
.addimg-img image{
  width:50%;
  height:50%;
}
.addimg-imgt{
  position: relative;
    border: solid #ccc 1rpx;
  height: 126rpx;
  width: 160rpx;
    margin-top:10rpx; 
  margin-left: 14rpx;
}
.addimg-imgt .skt{
  width: 100%;
  height: 100%;
}
.del{
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 35rpx;
  height: 35rpx;
}
.intuition{
  width: 78%;
  height: 40rpx;
  border: #ccc solid 2rpx;
  background: #fff;
  border-radius:10rpx; 
}
.hint{
  display: flex;
  margin-top: 60rpx;
}
.konbut{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color:#3181E7;
  background: #fff;
  border: #3181E7 solid 2rpx;
  border-radius: 40rpx;
  height: 60rpx;
  width: 260rpx; 
  margin:0 auto;
  margin-top: 100rpx;
}
.konbuttoo{
  color: #999;
  border: #999 solid 2rpx;
}