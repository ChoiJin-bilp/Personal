/* components/scanCode/scanCode.wxss */
.pull{
  height: 96%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 80rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  position: absolute;
}
.fstImg{
  width: 85%;
  height: 50rpx;
  font-size: 52rpx;
  font-family: "楷体";
  font-weight: bold;
  margin: auto;
}
/* .fstImg{
  width: 518rpx;
