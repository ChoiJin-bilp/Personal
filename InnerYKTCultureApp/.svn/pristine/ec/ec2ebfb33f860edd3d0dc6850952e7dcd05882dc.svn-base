/* packageVP/pages/verification/verification.wxss */
page{
  background: #F6F6F6;
  padding: 30rpx;
  box-sizing:border-box; 
}
.Top-z{
  display: flex;
  justify-content: space-between;
}
.Top .Top-z:nth-of-type(2){
  margin-top: 20rpx;
}
.Top .Top-z:nth-of-type(2) .TopItem image{
    width: 27rpx;
height: 15rpx;
}
.TopItem{
  width: 100%;
height: 60rpx;
background: #ffffff;
border: 2rpx solid #cccccc;
border-radius: 6rpx;
display: flex;
justify-content: space-between;
align-items: center;
padding: 10rpx;
box-sizing: border-box;
position: relative;
}
.TopItem input{
  width: 100%;
  font-size: 30rpx;
  color: #999;
}
.TopItem image{
  width: 40rpx;
height: 40rpx;
}

/* 下拉样式*/
.xiala{
  z-index: 20;
  font-size:28rpx;
  color: #999;
  padding: 0 10rpx;
  box-sizing: border-box;
  position: absolute;
  background: #fff;
  top: 58rpx;
  left: -1rpx;
  width: 101%;
  height: 160rpx;
  text-align: center;
  line-height: 50rpx;
  overflow: auto;
}
.xiala view{
  border-bottom: #ccc solid 2rpx;
  height: 25%;
  white-space: nowrap;
}
/*-------------------------------------------------时间样式-------------------------------------------------*/
.datatoday{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  color: #333;
  justify-content: space-between;
}
.datatoday-s{
  width: 66%;
  display: flex;
  justify-content: space-between;
}
.datatoday-s-o{
  display: flex;
  font-size: 28rpx;
  color: #999;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  border: #E3E3E3 solid 1rpx;
  width: 220rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.find{
  width: 35rpx;
  height: 35rpx;
}
.picker{
  float: right;
  width: 25rpx;
  height: 25rpx;
  margin-top: 6rpx;
}
.picker::after{
  clear: both;
}
.okDate{
  margin-left: 20rpx;
width: 100rpx;
height: 50rpx;
background: #e5e5e5;
border-radius: 10rpx;
font-size: 28rpx;
color: #666;
display: flex;
justify-content: center;
align-items: center;
}
.TopRight{
  width: 199rpx;
height: 60rpx;
background: #ffffff;
border: 2rpx solid #cccccc;
border-radius: 6rpx;
padding: 10rpx;
box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
    position: relative;
}
.TopRight image{
  width: 27rpx;
height: 15rpx;
}
.TopRight .buft{
  overflow: hidden;
  font-size: 28rpx;
  width: 150rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  }
