/* pages/Gifts/Gifts.wxss */

page {
  background: #f6f6f6;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color:#333;
}
/*头部样式*/
.Giftstop {
  background: #fff;
  width: 100%;
  padding: 20rpx;
  border-radius:10rpx; 
  box-sizing: border-box;
}

.userName {
  display: flex;
  align-items: center;
}
.userName view{
  width: 21%;
  color: #989898;
}
.userName input{
  width: 79%;
  color: #989898;
  border: #D4D4D4 solid 2rpx;
  height: 60rpx;
  border-radius:10rpx; 
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.useTime {
  display: flex;
  align-items: center;
  white-space: nowrap;
  margin: 20rpx 0;
}
.useTime input{
  width: 25%;
  border: #D4D4D4 solid 2rpx;
  padding: 4rpx 20rpx;
  border-radius:10rpx; 
  height: 50rpx;
}
.useTime view:nth-of-type(1){
  width: 22%;
  color: #989898;
}
.useTime view:nth-of-type(3){
  color: #989898;
}

.unit{
  width: 15%;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.addUptime{
  width: 39%;
font-size: 28rpx;
}

.Giftnum {
  display: flex;
  align-items: center;
  white-space: nowrap;
  position: relative;
}
.Giftnum input{
  border: #D4D4D4 solid 2rpx;
  padding: 4rpx 20rpx;
  border-radius:10rpx; 
  height: 60rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}
.Giftnum image{
position: absolute;
right: 10rpx;
bottom: 19rpx;
width: 32rpx;
height: 22rpx;
z-index: 100;
}
.Giftnum .kou{
  width: 22%;
  color: #989898;
}
.Giftnum view:nth-of-type(4){
  color: #989898;
}
.addUpnum{
  width: 39%;
font-size: 28rpx;
}
.bon{
 margin: 30rpx 0;
 width: 250rpx;
 height: 56rpx;
 display: flex;
 justify-content: center;
 align-items: center;
 border: #3886FC solid 2rpx;
 border-radius: 40rpx;
 margin-left: 50%;
 transform: translateX(-50%);
 color: #3886FC;
 margin-top: 50rpx;
}

/*底部css*/
.giftRecord{
    background: #fff;
  width: 100%;
  padding: 20rpx;
  border-radius:10rpx; 
  box-sizing: border-box;
  margin-top: 40rpx;
}
.recordTitle{
  line-height: 60rpx;
  color: #676767;
  font-weight: bolder;
}
.timeSelect{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.datatoday-s-o{
  display: flex;
  font-size: 28rpx;
  color: #999;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  border: #E3E3E3 solid 1rpx;
  width: 240rpx;
  justify-content: space-between;
  align-items: center;
}
.picker{
float: right;
margin-top: 10rpx;
width: 26rpx;
height: 18rpx;
}
.smallRecord{
  display: flex;
  margin: 20rpx 0;
}
.smallRecord view:nth-of-type(2){
  width: 38%;
display: flex;
justify-content: flex-end;
}
.smallRecord view:nth-of-type(3){
  width: 46%;
display: flex;
justify-content: flex-end;
}
/*列表样式*/
.recordList{
  margin-top: 30rpx;
}
.recordList-title{
  display:flex;
  color: #B5B5B5;
  border-bottom: solid 2rpx #B5B5B5;
  height: 50rpx;
}
.First{
width: 24%;
}
.Second{
width: 38%;
display: flex;
justify-content: center;
}
.Third{
width: 38%;
display: flex;
justify-content: flex-end;
}
.recordList-item{
  display:flex;
  color: #B5B5B5;
  border-bottom: solid 2rpx #F1F1F1;
  height: 80rpx;
  align-items: center;
}
/*下拉央視*/
.option_box {
  position: absolute;
  top: 60rpx;
  width: 100%;
  /* border: 1px solid #efefef; */
  box-sizing: border-box;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
  max-height: 188rpx;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
  text-align: center;
}