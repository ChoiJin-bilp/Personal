/* pages/groupinform/groupinform.wxss */
.newinform{
  width: 100%;
  height: 72rpx;
  background: #f8f8f8;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.newinform image{
  width: 48rpx;
  height: 48rpx;
  padding: 12rpx 20rpx;
  float: right;
}
scroll-view{
  padding-top: 72rpx;
}
.order-item {
  display: flex;
  position: relative;
  width: 96%;
  margin: 0 auto;
  height: 80rpx;
  clear:both;
  padding: 16rpx 2%;
  border-bottom:solid 2rpx #e5e5e5;
}
.remove{  
  width: 140rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -140rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
  font-size: 30rpx;
}  
.content{
  height: 80rpx;
  width: 100%;
  position: relative;
}
.nuber{
  position: absolute;
  left: 0;
  top: 0;
  width: 10%;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
  color: #333;
  overflow: hidden;
}
.carts-title{
  position: absolute;
  right: 0;
  top: 0;
  width: 100%;
  height: 80rpx;
  margin: 0;padding: 0;
}
.carts-title view{
  width: 100%;
  height: 40rpx;
  font-size: 32rpx;
  color: #000;
  overflow: hidden;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis; 
}
.carts-title text{
  width: 100%;
  height: 40rpx;
  line-height: 44rpx;
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
}
.no-text{
  width: 94%;
  height: 120rpx;
  margin: 80rpx auto;
  line-height: 60rpx;
  font-size: 0.9rem;
  color: #999;
  text-align: center;
}