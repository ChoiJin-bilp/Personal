/* pages/mypoints/mypoints.wxss */
/* pages/openstore/openstore.wxss */
page{
  background: #f6f6f6; 
}
.deposit{
  width: 94%;
  /* height: 366rpx; */
  margin: 20rpx auto;
  border-radius: 16rpx;
  /* box-shadow:0px 4rpx 6rpx rgba(221, 221, 226, 0.6); */
}
.depositbox{
  position: relative;
  height: 264rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.bgimage{
  width: 100%;
  height: 264rpx;
  position: absolute;
  left: 0;top: 0;
  z-index: 99;
}
.qr-hint{
  position: absolute;
  top: 10rpx;
  right: 0;
  width: 100%;
  z-index: 100;
}
.qr-hint image{
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  margin-right: 6rpx;
  float: right;
}
.limit{
  position: absolute;
  left: 0%;top: 50rpx;
  width: 100%;
  height: 100rpx;
  z-index: 100;
  color: white;
  text-align: center;
}
.depositbox text{
  font-family: 'DIN';
  font-size: 48rpx;
  display: inline-block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.depositbox view{
  display: inline-block;
  font-size: 28rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}
.conversion{
  width: 30%;
  height: 52rpx;
  background: #fff;
  color: #666;
  font-size: 28rpx;
  line-height: 50rpx;
  border-radius: 24rpx;
  position: absolute;
  bottom: 40rpx;
  z-index: 100;
  left:35%;
}
.width94{
  margin: 0 auto;
  background: white;
}
.DHrecord{
  width: 96%;
  margin: 0 auto;
  padding: 20rpx 0;
  border-top: 2rpx #e5e5e5 solid;
}
.DHrecord:first-child{
  border-top: 0rpx #e5e5e5 solid;
}
.DHstorename{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.now-progress{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  overflow: hidden;
}
.now-progress text{
  display: inline-block;
  float: left;
  color: #999;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.now-progress progress{
  float: left;
  width: 54%;
  margin-top: 16rpx;
}
.now-progress view{
  float: left;
  width:13%;
  margin-left: 2%;
  color: #333;
  font-size: 32rpx;
}
.now-progress button{
  position:absolute;
  right: 0;
  top: 4rpx;
  height: 52rpx;
  box-sizing: border-box;
  border: solid 2rpx #0066eb;
  line-height: 48rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: #0066eb;
  border-radius: 30rpx;
}
/* 二维码弹窗 */
.userule{
  position: fixed;
  left: 0;top: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  overflow: hidden;
}
.recordbox{
  width:80%;
  position: relative;
  top:50%;left:50%;
  padding: 10rpx 0;
  transform: translate(-50%,-50%);
  z-index: 99999;
  overflow: hidden;
  background: #fff;
  border-radius: 8px;
  padding-bottom: 100rpx;
}
.recordbox text{
  display: block;
  text-align: center; 
  width: 94%;
  margin: 0 auto;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #666;
  line-height: 60rpx;
  height: 60rpx;
}
.recordbox1{
  width:80%;
  height:540rpx;
  position: relative;
  top:50%;left:50%;
  padding: 10rpx 0;
  transform: translate(-50%,-50%);
  z-index: 99999;
  overflow: hidden;
  background: #fff;
  border-radius: 8px;
}
.record{
  width:100%;
  height:440rpx;
  position: absolute;
  top:0;left:0;
  border-radius: 8px;
  overflow: hidden;
}
.delete-box{
  width:100%;
  height:60rpx;
  padding: 20rpx 0;
  position: absolute;
  bottom:0rpx;left:0;
  z-index: 99999;
  text-align: center;
}
.del-record{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.name-card{
  display: inline-block;
  width: 92%;
  padding: 0 4%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 0.9rem;
  border-bottom: solid 2rpx #f5f5f5;
}

.qr-box{
  width: 90%;
  margin: 0 auto;
  padding: 20rpx 0;
  text-align: center;
}
.qr-card{
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
}
