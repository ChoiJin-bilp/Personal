/* components/payModeChosePop/payModeChosePop.wxss */
/*阴影css*/
.windowBackgroud {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgb(7, 7, 7, 0.6);
  z-index: 20;
}
/*拼团规则css*/
.paypopdetai {
  position: fixed;
  bottom: -1000rpx;
  left: 0;
  z-index: 900;
  background: #f6f8fa;
  transition: bottom 0.4s;
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
}

.paypopdetaiout {
  bottom: 0;
}

.paywindow{
  padding: 60rpx;
  box-sizing: border-box;
}
.payTitle{
 font-size: 36rpx;
 text-align: center;
 color: #333333;
 line-height: 42rpx;
 font-weight: bold;
}
.fenge{
 height: 4rpx;
 opacity: 1;
 background: #f6f6f6;
 margin-top: 40rpx;
}
.mhpof{
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 2rpx #f6f6f6;
}
.mhpof-z{
  display: flex;
  align-items: center;
}
.mhpof-z image{
 width: 52rpx;
 height: 52rpx;
}
.mhpof-z view text{
 font-size: 26rpx;
color: #999999;
}
.mhpof-z view {
 font-size: 30rpx;
 color: #333333;
 display: inline-block;
 margin-left: 20rpx;
}
.mkright{
 width: 32rpx;
 height: 32rpx;
 border: 2rpx solid #666666;
 border-radius: 50%;
 display: flex;
 align-items: center;
 justify-content: center;
}
.mkrightchioce{
 border: 2rpx solid #428ceb;
}
.mkrightchioce view{
 width: 20rpx;
 height: 20rpx;
 opacity: 1;
 background: #428ceb;
 border-radius: 50%;
}
.bubottom{
 margin-top: 70rpx;
 width: 100%;
 height: 83rpx;
 opacity: 1;
 background: #428ceb;
 border-radius: 20rpx;
 font-size: 30rpx;
color: #ffffff;
line-height: 42rpx;
display: flex;
justify-content: center;
align-items: center;
}
.bubottom text{
  margin-left: 36rpx;
  font-size: 32rpx;
}
.paywin{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
height: 60rpx;
}