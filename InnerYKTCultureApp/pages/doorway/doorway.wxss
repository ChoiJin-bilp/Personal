/*外卖 点餐*/
.note{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.note-eat{
  width: 48%;
  height: 230rpx;
opacity: 1;
/* background: linear-gradient(-45deg,#7ac95b 0%, #23b549 100%); */
background: linear-gradient(-45deg,#f69c6b 0%, #fd6d6d 100%);
