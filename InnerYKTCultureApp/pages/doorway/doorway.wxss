page{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  padding-bottom: 190rpx;
  background-color: #f6f6f6;
}
.fairm {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #086;
