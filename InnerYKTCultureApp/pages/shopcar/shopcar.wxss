/* pages/shopcar/shopcar.wxss */
/* 上拉下拉所需设置 */
page{
  background: #f6f6f6;
  height:100%;
}
.cart-box{
    padding-bottom: 124rpx;
    padding-top: 20rpx;
    
}
.cart-shop{
  width: 94%;
  margin: 0 auto;
  
}
.cart-store{
  width: 100%;
  background: #fff;
  overflow: hidden;
  border-radius: 16rpx;
  clear: both;
  margin-top: 20rpx;
}
.cart-list{
  width: 100%;
  /* padding: 20rpx 0; */
  clear: both;
  /* padding-bottom: 30rpx; */
  border-top: 1rpx solid #e6e6e6;
  min-height: 204rpx;
}
.cart-list:first-child{
  padding-top: 0;
}
.shopdetails{
  width:94%;
  height: 164rpx;
  margin: 0 auto;
  padding: 20rpx 3%;
  position: relative;
}
.nokucun{
  position: absolute;
  width: 100%;
  height: 100%;
  background:#fff;
  left: 0;top: 0;
  opacity: 0.5;
  z-index: 99;
}
.nokucuntips{
  background: #e5e5e5;
  color: #333;
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  width: 160rpx;
  position: absolute;
  left: 77rpx;top: 20rpx;
  z-index: 100;
  border-radius: 12rpx;
  text-align: center;
}
.cart-list .cart-pro-select{
  float: left;
  width: 44rpx; 
  height: 44rpx;
  margin-top: 60rpx;
}

.cart-list .cart-thumb{
  float: left;
  margin-left: 10rpx;
  width: 164rpx;
  height: 164rpx;
  border: solid 2rpx #f8f8f8;
  box-sizing: border-box;
  border-radius: 12rpx;
}
.cart-infor{
  float: right;
  width: 430rpx;
  height: 164rpx;
  position: relative;
}
.cart-list .cart-pro-name{
  display: inline-block;
  width: 100%;
  height:40rpx;
  line-height: 40rpx;
  overflow: hidden;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; */
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  position: absolute;
  left: 0;
  top: 0;
}
.cart-norms{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  left: 0;
  top: 80rpx;
}
.cart-moeny{
  width: 100%;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 30rpx;
  color: #333;
  position: absolute;
  left: 0;
  top: 120rpx;
}
.cart-pro-no{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #333;
  position: absolute;
  left: 0;
  top: 40rpx;
}
.cart-list .cart-pro-price{
    display: inline-block;
    color: #ff1f1f;
    font-size: 24rpx;
}
.cart-list .cart-pro-price text{
    font-size: 32rpx;
    font-weight: bold;
}
.cart-list .cart-count-box{
    float: right;
    width: 220rpx;
    height: 46rpx;
}
.cart-list .cart-count-box text{
    display: inline-block;
    vertical-align: middle;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 46rpx;
    line-height: 40rpx!important;
    border: solid 2rpx #e9e9e9;
}
.cart-count-num{
    width: 120rpx;
    border-top: solid 2rpx #e9e9e9;
    border-bottom: solid 2rpx #e9e9e9;
   
}
.cart-count-down{
  border-top-left-radius: 12rpx;
  border-bottom-left-radius:12rpx;
}
.cart-count-add{
  border-top-right-radius: 12rpx;
  border-bottom-right-radius:12rpx;
}
.cart-header{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 60rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #f8f8f8;
}
.cart-header text{
  display: inline-block;
  color: #333;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
}
.cart-header view{
  position: absolute;
  right: 20rpx;
  top: 0;
  color: #136fe6;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 10rpx;
    width: 44rpx;
    height: 44rpx;
    vertical-align: middle;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 44rpx; 
    height: 44rpx;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 44rpx; 
  height: 44rpx;
}
.cart-toatl-price{
    float: right;
    width: 120rpx;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}

.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 96%;
    height: 120rpx;
    padding:0 2%;
    background: #ffe9d1;
}
.shoppay{
  width: 320rpx;
  float: left;
  height: 80rpx;
  margin:20rpx; 
}
.total{
  width: 100%;
  height: 40rpx;
  line-height: 36rpx;
  font-size: 30rpx;
  color: #000;
}
.total text{
  font-size: 28rpx;
  color: #ff1f1f;

}
.total text text{
  font-size: 36rpx;
  font-weight: bold;

}
.privilege{
  width: 100%;
  height: 40rpx;
  line-height: 44rpx;
  font-size: 30rpx;
  color: #666;
}
.privilege text{
  font-size: 24rpx;
  color: #666;

}
.now-pay{
  display: inline-block;
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;  
  text-align: center;
  background: -webkit-linear-gradient(left, #ff1f1f , #ff592d); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff1f1f, #ff592d); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff1f1f, #ff592d); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff1f1f , #ff592d); /* 标准的语法（必须放在最后） */ 
  border-radius: 40rpx;
   margin: 20rpx;
}
.ashopname{
  padding:10rpx 3%;
}
.storenumber{
  width: 94%;
  margin: 0 auto;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 28rpx;
  color: #999;
  padding-top: 20rpx;
}